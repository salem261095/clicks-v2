---
import { CONTACTS } from "@/config/const";
import { siWhatsapp } from "simple-icons/icons";
import { HeroSection } from "@/config/Sections";
---

<section
  class="flex flex-col-reverse md:flex-row items-center gap-8 px-6 py-12 md:py-24 max-w-7xl mx-auto"
  aria-label={HeroSection.arialable}
>
  <div class="md:w-1/2 md:pr-8 text-right">
    <h1 class="text-3xl md:text-4xl font-bold mb-6 leading-tight">
      {HeroSection.title}
    </h1>
    <p class="text-lg md:text-xl text-gray-600 mb-8 leading-relaxed">
      {HeroSection.description}
    </p>
    <div class="flex justify-start">
      <a
        href={HeroSection.ctaHref}
        target="_blank"
        rel="noopener noreferrer"
        class="bg-brand hover:bg-brand-hover text-black px-6 py-3 rounded-md flex items-center gap-2 transition duration-200 hover:shadow-lg"
      >
        {HeroSection.ctaText}
        <svg viewBox="0 0 24 24" width="16" height="16">
          <path d={siWhatsapp.path} fill="currentColor"></path>
        </svg>
      </a>
    </div>
  </div>

  <div class="md:w-1/2">
    <img
      src="/images/HeroImage.avif"
      alt="Digital marketing illustration"
      class="w-full h-auto object-cover"
    />
  </div>
</section>
